{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 16",

  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2021"],
    "module": "commonjs",
    "paths": {
      "@/controllers/*": ["src/controllers/*"],
      "@/datastore": ["src/modules/storage/Datastore"],
      "@/helpers/*": ["src/helpers/*"],
      "@/middleware/*": ["src/middleware/*"],
      "@/models/*": ["src/models/*"],
      "@/modules/*": ["src/modules/*"],
      "@/root/*": ["*"],
      "@/utils/*": ["src/utils/*"]
    },
    "rootDir": ".",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2021"
  }
}
